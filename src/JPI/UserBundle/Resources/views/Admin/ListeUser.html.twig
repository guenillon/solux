{% extends "JPIUserBundle::layout.html.twig" %}

{% block fos_user_content %}
<div class="panel panel-default">
	<div class="panel-heading clearfix">
		<div class="panel-title">
			<ul class="list-inline">
        		<li class="col-xs-12">
           			<h4 class="pull-left">Utilisateurs</h4>
          			<span class="btn-group pull-right"> 
			    		<a href="{{ path("jpi_user_add") }}" class="btn btn-default "><i class="glyphicon glyphicon-plus"></i> Ajouter</a>
						<a href="{{ path("jpi_user_export", { 'format': "xlsx" }) }}" class="btn btn-default "><i class="glyphicon glyphicon-download"></i> Excel</a>
						<a href="{{ path("jpi_user_export", { 'format': "csv" }) }}" class="btn btn-default "><i class="glyphicon glyphicon-download"></i> CSV</a>
       				</span>
				</li>
			</ul>
		</div>
	</div>
	<div class="panel-body">
		<table class="jpi_table_data_table table table-striped table-bordered table-responsive table-condensed table-hover">
			<thead>
				<tr>
					<th>{{ 'profile.show.username'|trans({}, 'FOSUserBundle') }}</th>
					<th>{{ 'profile.show.email'|trans({}, 'FOSUserBundle') }}</th>
				</tr>
			</thead>
			{% for user in liste_users %}
			<tr class="clickableRow" data-href="{{ path('jpi_show_user_profile', { 'id': user.id }) }}">
				<td>{{ user.username }}</td>
				<td>{{ user.email }}</td>
			</tr>
			{% endfor %}
		</table>
	</div>
</div>
{% endblock fos_user_content %}