{% extends "JPISoluxBundle::layout.html.twig" %}

{% block jpi_solux_content %}
<div class="panel panel-default">
	<div class="panel-heading clearfix">
		<div class="panel-title">
			<ul class="list-inline">
        		<li class="col-xs-12">
           			<h4 class="pull-left">Achats : {{ famille.prenomChef }} {{ famille.nom }}</h4>
				</li>
			</ul>
		</div>
	</div>
	<div class="panel-body">
		<table data-order='[[ 0, "desc" ]]' class="jpi_table_data_table table table-striped table-bordered table-responsive table-condensed table-hover">
			<thead>
				<tr>
					<th>Date</th>
					<th>Montant</th>
					<th>Montant Pay√©</th>
				</tr>
			</thead>
			{% for achat in listeAchats %}
			<tr class="clickableRow" data-href="{{ path( 'jpi_solux_caisse_achats_show', { 'id': achat.id }) }}">
				<td>{{ achat.date|localizeddate('short', 'none', locale) }}</td>
				<td class="text-right">{{ achat.montant|localizedcurrency(currency) }}</td>
				<td class="text-right">{{ achat.montantPaye|localizedcurrency(currency) }}</td>
			</tr>
			{% endfor %}
		</table>
	</div>
</div>
{% endblock jpi_solux_content %}
