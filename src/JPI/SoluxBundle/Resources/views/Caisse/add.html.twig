{% extends "JPISoluxBundle::layout.html.twig" %}
{% block jpi_solux_content %}
<div class="panel panel-default">
	<div class="panel-heading clearfix">
    	<div class="panel-title">
			<ul class="list-inline">
        		<li class="col-xs-12">
           			<h4 class="pull-left">{{ 'caisse.add.titre'|trans }}</h4>
				</li>
			</ul>
		</div>
  	</div>
	<div class="panel-body">
		<div class="col-xs-3">{{ 'caisse.add.prenom'|trans }} : {{ famille.prenomChef }}</div>
		<div class="col-xs-3">{{ 'caisse.add.nom'|trans }} : {{ famille.nom }}</div>
		<div class="col-xs-3">{{ 'caisse.add.taux_participation'|trans }} : {{ (taux.taux *100)|localizednumber  }} %</div>
		<div class="col-xs-3">{{ 'caisse.add.montant_max'|trans }} : {{ montantMaxAchat|localizedcurrency(currency) }}</div>	
	</div>
</div>
{% endblock jpi_solux_content %}