{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% extends "JPISoluxBundle::layout.html.twig" %}
{% block jpi_solux_content %}
<div class="hidden" id="caisse-config" 
{% if achat.id is null %}
	data-add="1"
{% else %}
	data-add="0"
{% endif %}
></div>


<div class="panel panel-default">
	<div class="panel-heading clearfix">
    	<div class="panel-title">
			<ul class="list-inline">
        		<li class="col-xs-12">
           			<div class="col-xs-3 ">
           				{% if achat.id is null %}
							{{ 'caisse.add.titre'|trans }}
						{% else %}
							{{ 'caisse.show.titre'|trans }} : {{ achat.date|localizeddate('short', 'none', locale) }}
						{% endif %}
					</div>           			
					<div class="col-xs-3 ">{{ 'caisse.add.famille'|trans }} : {{ famille.prenomChef }} {{ famille.nom }}</div>
					<div class="col-xs-3 ">{{ 'caisse.add.taux_participation'|trans }} : 
						{% if taux is null %}
							<span id="taux" data-taux="1">Indéterminé</span>
						{% else %}
							<span id="taux" data-taux="{{ taux.taux }}">{{ (taux.taux *100)|localizednumber  }} %</span>
						{% endif %}
					</div>
					<div class="col-xs-3 ">{{ 'caisse.add.montant_max'|trans }} : 
						{% if montantMaxAchat is null %}
							<span id="montantMax" data-montantMax="-1">Aucune limite</span>
						{% else %}
							<span id="montantMax" data-montantMax="{{ montantMaxAchat }}">{{ montantMaxAchat|localizedcurrency(currency) }}</span>
						{% endif %}
					</div>	
				</li>
			</ul>
		</div>
  	</div>
	<div class="panel-body hide-show">
		{{ form_start(form) }}
   		{{ form_errors(form) }}
   		<div class="col-xs-6">
   			{{ form_row(form.codeBarre) }}
   		</div>
   		<div class="col-xs-6">
   			{{ form_row(form.nom) }}
   		</div>
   		<input class="hidden" type="submit" />
   		{{ form_rest(form) }}
   		{{ form_end(form) }}
	</div>
</div>

<div class="panel panel-default">
	<div class="panel-heading clearfix">
    	<div class="panel-title">
			<div class="row">
				<div class="col-md-3">Total : 
					<span id="total">
						{% if achat.id is null %}
							0
						{% else %}	
							{{ achat.montant|localizednumber }}
						{% endif %}
					</span> €</div>
				<div class="col-md-3">Total payé : 
					<span id="total-paye">				
						{% if achat.id is null %}
							0
						{% else %}	
							{{ achat.montantPaye|localizednumber }}
						{% endif %}
					</span> €</div>
				<div class="col-md-1 hide-show">
					<label class="control-label" for="versement">Versement</label>
				</div>
				<div class="col-md-2 hide-show">
					<div class="input-group">
						<input type="text" class="form-control" id="versement"/>
						<span class="input-group-addon"> €</span>
					</div>
				</div>
				<div class="col-md-3 hide-show">À rendre : <span id="rendre">0</span> €</div>
			</div>	
		</div>
	</div>
    <div class="panel-body">
    	<table data-paging="false" data-searching="false" data-info="false" class="jpi_table_data_table_caisse table table-striped table-bordered table-responsive table-condensed table-hover">
			<thead>
				<tr>
					<th>Id</th>
					<th>Catégorie</th>
					<th class="text-center">Produit</th>
					<th class="text-center">Qu</th>
					<th class="text-center">Pu</th>
					<th colspan="3" class="text-center">Quantité</th>
					<th class="text-center">Prix</th>
					<th class="text-center">Prix Payé</th>
					<th></th>
				</tr>
				<tr class="hidden">
					<th></th>
					<th></th>
					<th></th>
					<th></th>
					<th></th>
					<th></th>
					<th></th>
					<th></th>
					<th></th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			
			{% if achat.id is not null %}
			<tbody>
				{% for detail in achat.detail %}
				<tr>
					<td>{{ detail.produit.id }}</td>
					<td>{{ detail.produit.categorie.nom }}</td>
					<td>{{ detail.produit.nom }}</td>
					<td>{{ detail.produit.quantite|localizednumber }} {{ detail.produit.unite }}</td>
					<td>{{ detail.produit.prix|localizedcurrency(currency) }}</td>
					<td><a href="#" id="delete-qte-{{ detail.produit.id }}" class="btn btn-xs btn-block btn-default delete-qte hide-show"
						data-produit-id="{{ detail.produit.id }}"
	                    data-produit-prix="{{ detail.produit.prix }}"
	                    data-produit-prix_fixe="{{ detail.produit.prixFixe }}"
	                    data-produit-unite="{{ detail.produit.unite }}"
	                    data-produit-quantite="{{ detail.produit.quantite }}"
	                    data-produit-limite-quantite_max="-1"
	                    data-produit-quantite-achat-total="-1"
					><span class="glyphicon glyphicon-minus-sign"></span></a></td>
					<td>{{ detail.quantite|localizednumber }} {{ detail.unite }}</td>
					<td><a href="#" id="add-qte-{{ detail.produit.id }}" class="btn btn-xs btn-block btn-default add-qte hide-show"
						data-produit-id="{{ detail.produit.id }}"
	                    data-produit-prix="{{ detail.produit.prix }}"
	                    data-produit-prix_fixe="{{ detail.produit.prixFixe }}"
	                    data-produit-unite="{{ detail.produit.unite }}"
	                    data-produit-quantite="{{ detail.produit.quantite }}"
	                    data-produit-limite-quantite_max="-1"
	                    data-produit-quantite-achat-total="-1"
					><span class="glyphicon glyphicon-plus-sign"></span></a></td>
					<td>{{ detail.prix|localizedcurrency(currency) }}</td>
					<td>{{ detail.prixPaye|localizedcurrency(currency) }}</td>
					<td><a href="#" class="btn btn-xs btn-block btn-default delete-row hide-show" id="delete-row-{{ detail.produit.id }}"><span class="glyphicon glyphicon-remove"></span></a></td>
				</tr>
				{% endfor %}
			</tbody>
			{% endif %}
			
			
		</table>
		<div>		
			<div class="hidden">	
			{{ form_start(form_achat) }}
			{{ form_errors(form_achat) }}
			{{ form_rest(form_achat) }}
			</div>	
			<div class="form-group">
				<div class="col-sm-2">
					<a href="
					{% if achat.id is not null %}
						{{ path( 'jpi_solux_caisse_achats_famille', { 'id': famille.id }) }}
					{% else %}
						{{ path("jpi_solux_caisse") }}
					{% endif %}" class="btn btn-default"><i class="glyphicon glyphicon-chevron-left"></i> {{ 'form.annuler'|trans }}</a>
				</div>
				<div class="col-sm-10 ">
					<button type="submit" class="btn btn-default pull-right" id="btn-submit"><span class="glyphicon glyphicon-ok"></span> {{ 'form.enregistrer'|trans }}</button>
					{% if achat.id is not null %}
						<span class="btn-group pull-right btn-group-edit"> 
							<a href="#" class="btn btn-default" id="btn-edit"><span class="glyphicon glyphicon-edit"></span> {{ 'form.modifier'|trans }}</a>
							<a data-toggle="modal" href="#confirm-action" class="btn btn-default"><span class="glyphicon glyphicon-trash"></span> {{ 'form.supprimer.button'|trans }}</a>
						</span>
					{% endif %}
				</div>
			</div>
			<div class="hidden">	
			{{ form_end(form_achat) }}
			</div>	
		</div>
	</div>
</div>

<div class="modal fade" id="produit-inconnu">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">x</button>
        <h4 class="modal-title">{{ 'caisse.produit.inconnu.titre'|trans }}</h4>
      </div>
      <div class="modal-body">
      	<div>{{ 'caisse.produit.inconnu.message'|trans }}</div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="quantite-max">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">x</button>
        <h4 class="modal-title">{{ 'caisse.produit.quantite_max.titre'|trans }}</h4>
      </div>
      <div class="modal-body">
      	<div>{{ 'caisse.produit.quantite_max.message'|trans }}</div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="montant-max">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">x</button>
        <h4 class="modal-title">{{ 'caisse.produit.montant_max.titre'|trans }}</h4>
      </div>
      <div class="modal-body">
      	<div>{{ 'caisse.produit.montant_max.message'|trans }}</div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="confirm-action">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">x</button>
        <h4 class="modal-title">{{ 'form.supprimer.titre'|trans }}</h4>
      </div>
      <div class="modal-body">
      	<div>{{  'caisse.confirm_delete'|trans }}</div>
      </div>
      <div class="modal-footer">
        <a href="{{ path('jpi_solux_caisse_achats_delete' , { 'id': achat.id }) }}" class="btn btn-default"><span class="glyphicon glyphicon-trash"></span> {{ 'form.supprimer.button'|trans }}</a>
      </div>
    </div>
  </div>
</div>

{% endblock jpi_solux_content %}